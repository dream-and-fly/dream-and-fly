<script>
function initMap (){
    let location ={lat:31.9552,lng:35.945};
    let map = new google.maps.Map(document.getElementById("map"), {
        zoom: 4,
        center: location
    });
    let marker = new google.maps.Marker({
        position: location,
        map: map
    });
}
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCKimxOAALz2rpF4TXGOpLNHfWe4HpxKzo&callback=initMap"></script>
