<!DOCTYPE html>
<html lang="en">
  <%- include('../../layouts/head') %>
  <body>
    <%- include('../../layouts/header') %>
    <!-- Your code here -->
    <div class="login__main">
      <div class="login__login__box">
        <h1>Register</h1>

        <ul>
          <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => {
          %>
          <li><%= error.message %></li>
          <% }) %> <% } %>
        </ul>
        <form action="/users/register" method="POST">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            required
          />

          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            required
          />

          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />

          <input
            type="password"
            id="password2"
            name="password2"
            placeholder="Confirm Password"
            required
          />

          <input type="submit" value="Register" />

          <a href="/users/login">Already registered? Login here</a>
        </form>
      </div>
    </div>
    <%- include('../../layouts/footer') %> <%- include('../../layouts/scripts')
    %>
  </body>
</html>
